# DO NOT REMOVE. CLOUDLINUX PASSENGER CONFIGURATION BEGIN
PassengerAppRoot "/home/YOUR_USERNAME/YOUR_APP_DIR"
PassengerBaseURI "/"
PassengerNodejs "/home/YOUR_USERNAME/nodevenv/YOUR_APP_NAME/24/bin/node"
PassengerAppType node
PassengerStartupFile start-production.js
PassengerAppLogFile /home/YOUR_USERNAME/YOUR_APP_DIR/passenger.log
# DO NOT REMOVE. CLOUDLINUX PASSENGER CONFIGURATION END

# DO NOT REMOVE OR MODIFY. CLOUDLINUX ENV VARS CONFIGURATION BEGIN
<IfModule Litespeed>
SetEnv NODE_OPTIONS "--experimental-specifier-resolution=node"
SetEnv NODE_ENV "production"
</IfModule>
# DO NOT REMOVE OR MODIFY. CLOUDLINUX ENV VARS CONFIGURATION END

# React Router için tüm route'ları index.html'e yönlendir
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # API isteklerini backend'e yönlendir (Proxy)
  RewriteCond %{REQUEST_URI} ^/api/
  RewriteRule ^api/(.*)$ http://localhost:3002/api/$1 [P,L]
  
  # Statik dosyalar (assets, images, etc.)
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  # Dizinler
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Diğer her şeyi index.html'e yönlendir (React Router)
  RewriteRule ^.*$ /index.html [L,QSA]
</IfModule>

# Güvenlik başlıkları
<IfModule mod_headers.c>
  # XSS Koruması
  Header set X-XSS-Protection "1; mode=block"
  
  # Content Type Sniffing koruması
  Header set X-Content-Type-Options "nosniff"
  
  # Clickjacking koruması
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Content Security Policy (İyzico için güncellenmiş)
  Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.iyzipay.com https://*.iyzico.com; style-src 'self' 'unsafe-inline' https://*.iyzipay.com; img-src 'self' data: blob: https://*.iyzipay.com https://*.iyzico.com; connect-src 'self' https://*.iyzipay.com https://*.iyzico.com wss://*.iyzico.com; frame-src 'self' https://*.iyzipay.com https://*.iyzico.com; font-src 'self' https://*.iyzipay.com;"
  
  # HSTS (HTTPS zorunlu kullanım için - sadece HTTPS'de etkinleştirin)
  # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Gzip sıkıştırma
<IfModule mod_deflate.c>
  # Metin tabanlı dosyaları sıkıştır
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Cache kontrol ayarları
<IfModule mod_expires.c>
  ExpiresActive On
  
  # HTML dosyaları - cache yapma (her zaman güncel olmalı)
  ExpiresByType text/html "access plus 0 seconds"
  
  # CSS ve JavaScript - 1 yıl cache (build hash'leri ile)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  
  # Resimler - 1 yıl cache
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType image/vnd.microsoft.icon "access plus 1 year"
  
  # Fontlar - 1 yıl cache
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  
  # Diğer
  ExpiresByType application/pdf "access plus 1 month"
  ExpiresByType video/mp4 "access plus 1 month"
</IfModule>

# MIME Types
<IfModule mod_mime.c>
  AddType application/javascript js
  AddType text/css css
  AddType image/svg+xml svg svgz
  AddType application/font-woff woff
  AddType application/font-woff2 woff2
  AddType application/vnd.ms-fontobject eot
  AddType font/ttf ttf
  AddType font/otf otf
  AddType image/webp webp
</IfModule>

# Dizin listelemeyi kapat
Options -Indexes

# .env ve diğer hassas dosyalara erişimi engelle
<FilesMatch "^\.env.*|\.git.*|\..*">
  Order allow,deny
  Deny from all
</FilesMatch>

# Log dosyalarına erişimi engelle
<FilesMatch "\.(log|LOG)$">
  Order allow,deny
  Deny from all
</FilesMatch>
